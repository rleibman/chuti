<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%level] %logger - [%X] %replace(%message){'\n', ''}%n%xException</pattern>
        </encoder>
    </appender>

    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/chuti-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/chuti-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%date [%level] %logger - [%X] %replace(%message){'\n', ''}%n%xException</pattern>
        </encoder>
    </appender>

    <!-- Root logger - DEBUG for development, INFO for production -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Application loggers -->
    <logger name="game" level="DEBUG"/>
    <logger name="dao" level="DEBUG"/>
    <logger name="chat" level="DEBUG"/>
    <logger name="chuti" level="DEBUG"/>
    <logger name="api" level="DEBUG"/>
    <logger name="auth" level="DEBUG"/>

    <!-- Third-party library loggers -->
    <logger name="io.grpc.netty.shaded.io.grpc.netty" level="ERROR"/>
    <logger name="io.grpc.netty.shaded.io.netty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="ai.djl.huggingface" level="INFO"/>
    <logger name="dev.langchain4j.store.embedding" level="ERROR"/>
    <logger name="com.github.dockerjava" level="OFF"/>
    <logger name="org.testcontainers" level="OFF"/>
    <logger name="org.mariadb.jdbc.message.server.OkPacket" level="OFF"/>
    <logger name="org.mariadb.jdbc.client.impl.StandardClient" level="OFF"/>
    <!--    <logger name="org.mariadb.jdbc" level="DEBUG"/>-->
    <logger name="com.zaxxer.hikari" level="OFF"/>
    <logger name="org.flywaydb" level="INFO"/>

</configuration>
